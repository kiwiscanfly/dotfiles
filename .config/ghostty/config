# Ghostty Terminal Configuration
# Documentation: https://ghostty.org/docs/config/reference

# Font - Maple Mono Nerd Font for icon support
font-family = "Maple Mono NF"
font-feature = -calt -liga -dlig

# macOS Option key behavior
# Make Option/Alt keys send escape sequences for word navigation
macos-option-as-alt = true
macos-titlebar-style = transparent

# Theme - Catppuccin Mocha (dark mode only)
theme = Catppuccin Mocha

# Override background with Gruvbox dark background to match Starship prompt
background = #282828
background-opacity = 0.98

# Cursor Shaders - animated cursor effects
custom-shader = shaders/cursor_warp.glsl
custom-shader = shaders/ripple_cursor.glsl
custom-shader = shaders/cursor_blaze.glsl
custom-shader-animation = always

