[filetype]

rules = [
  # Images
  { mime = "image/*", fg = "#cba6f7" },

  # Videos
  { mime = "video/*", fg = "#d99368" },
  { mime = "audio/*", fg = "#d99368" },

  # Archives
  { mime = "application/zip", fg = "#f38ba8" },
  { mime = "application/gzip", fg = "#f38ba8" },
  { mime = "application/x-tar", fg = "#f38ba8" },
  { mime = "application/x-bzip*", fg = "#f38ba8" },
  { mime = "application/x-7z-compressed", fg = "#f38ba8" },
  { mime = "application/x-rar", fg = "#f38ba8" },

  # Documents
  { mime = "application/pdf", fg = "#85c4b8" },
  { mime = "text/*", fg = "#99d1a0" },

  # Special files
  { name = "*", is = "orphan", fg = "#f38ba8" },
  { name = "*", is = "exec", fg = "#99d1a0" },

  # Fallback
  { name = "*", fg = "#e0e0e0" },
  { name = "*/", fg = "#7d9dcc" },
]
